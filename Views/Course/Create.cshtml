            @Html.DropDownListFor(model => model.Course.TrainerId, new SelectList(Model.TrainersList, "TrainerId", "LastName"), "Select Name", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Course.TrainerId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Course.CourseCategoryId, "Course Name", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Course.CourseCategoryId, new SelectList(Model.CourseCategories, "CourseCategoryId", "CourseCategoryName"), "Select Name", new { htmlAttributes = new { @class = "form-control" } })
